{
  "name": "graphql-explorer-root",
  "private": true,
  "author": "Giacomo Tagliabue",
  "scripts": {
    "test": "lerna run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "yarn 4c lint --fix"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "@4c/cli": "^4.0.4",
    "lerna": "^8.2.0",
    "typescript": "^5.9.3"
  },
  "workspace-sources": {
    "graphql-explorer/lib/*": [
      "packages/graphql-explorer/src/*"
    ],
    "graphql-explorer-html/build/*": [
      "packages/graphql-explorer-html/src/*"
    ]
  }
}
